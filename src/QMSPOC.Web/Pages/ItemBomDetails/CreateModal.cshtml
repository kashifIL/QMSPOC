@page
@using Microsoft.AspNetCore.Mvc.Localization
@using QMSPOC.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using QMSPOC.Web.Pages.ItemBomDetails
@using QMSPOC.ItemBomDetails;
@using System.Globalization
@inject IHtmlLocalizer<QMSPOCResource> L
@model CreateModalModel
@{
    Layout = null;
}


<form data-ajaxForm="true" asp-page="/ItemBomDetails/CreateModal" autocomplete="off">
    <abp-modal id="ItemBomDetailCreateModal">
        <abp-modal-header title="@L["NewItemBomDetail"].Value"></abp-modal-header>

        <abp-modal-body>

                
                    <abp-input asp-for="ItemBomId" />
                    

            <abp-input asp-for="ItemBomDetail.Qty"   data-val="false" />


            <abp-input asp-for="ItemBomDetail.Uom"    />

                                <abp-select asp-for="ItemBomDetail.ItemId" asp-items="Model.ItemLookupListRequired" label="@L["Item"].Value"/>
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
