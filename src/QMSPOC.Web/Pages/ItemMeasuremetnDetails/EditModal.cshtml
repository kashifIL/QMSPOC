@page
@using Microsoft.AspNetCore.Mvc.Localization
@using QMSPOC.Localization
@using QMSPOC.Web.Pages.ItemMeasuremetnDetails
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using QMSPOC.ItemMeasuremetnDetails;
@using System.Globalization
@inject IHtmlLocalizer<QMSPOCResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ItemMeasuremetnDetails/EditModal" autocomplete="off">
    <abp-modal id="ItemMeasuremetnDetailEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>


            <abp-input asp-for="Id" />

                
                    <abp-input asp-for="ItemMeasuremetnDetail.ItemMessurementId" type="hidden" />
                    
                    

            <abp-input asp-for="ItemMeasuremetnDetail.Type"    />


            <abp-input asp-for="ItemMeasuremetnDetail.Value"   data-val="false" />


            <abp-input asp-for="ItemMeasuremetnDetail.Uom"    />

                    
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
